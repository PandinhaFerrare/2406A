 if(senha == "não quero reprovar"){
     println("Bem-Vindo Sr Nerd")
 }else{
     println("Senha Incorreta")
 }
    
 var prova = 8
 if(prova >= 10){
     println("Parabés, você é um aluno exemplar")
 }else if(prova == 8){
     println("Você foi bem!")
 }else if(prova == 5){
     println("Você está na média")
 }else{
     println("Está precisando estudar mais não?")
 }
 
 
 
 
 
 
 
 
}
